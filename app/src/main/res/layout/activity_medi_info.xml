<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop ="20dp"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:id="@+id/backinfo"
                android:background="#00000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Info"
                android:paddingLeft="20dp"
                android:textFontWeight="600"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/source_sans"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop ="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pill Name"
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />

                <TextView
                    android:id="@+id/m_info_name"
                    android:layout_width="270dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:minHeight="48dp"
                    android:paddingLeft="12dp"
                    android:text="Pill Name"
                    tools:layout_editor_absoluteX="100dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop ="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:id="@+id/medi_name"
                    android:gravity="center"
                    android:layout_marginLeft="11dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/m_info_amt"
                    android:layout_width="160dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:minHeight="48dp"
                    android:paddingLeft="12dp"
                    android:text="Pill Amount"
                    tools:layout_editor_absoluteX="100dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop ="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dose"
                    android:gravity="center"
                    android:layout_marginLeft="11dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/m_info_dose"
                    android:layout_width="160dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:minHeight="48dp"
                    android:paddingLeft="12dp"
                    android:text="Pill Dose"
                    tools:layout_editor_absoluteX="100dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop ="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequency"
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/m_info_freq"
                android:layout_width="270dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:text="Pill Frequency"
                tools:layout_editor_absoluteX="100dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop ="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/m_info_rem"
                android:layout_width="270dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:minHeight="48dp"
                android:paddingLeft="12dp"
                android:text="Pill Time"
                tools:layout_editor_absoluteX="100dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>